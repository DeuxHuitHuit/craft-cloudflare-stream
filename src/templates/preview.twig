<div style="max-height: 100%;display: flex;flex-shrink: 1;">
{% if value.readyToStream %}
	<video autoplay muted controls style="width: 100%; object-fit: contain;" width="{{ value.input.width }}" height="{{ value.input.height }}" poster="{{ value.thumbnail }}">
		{% if value.mp4Url %}
			<source src="{{ value.mp4Url }}" type="video/mp4">
		{% endif %}
		{% if value.playback.hls %}
			<source src="{{ value.playback.hls }}" type="application/x-mpegURL">
		{% endif %}
		{% if value.playback.dash %}
			<source src="{{ value.playback.dash }}" type="application/dash+xml">
		{% endif %}
	</video>
{% elseif value.thumbnail %}
	<img src="{{ value.thumbnail }}" style="width: 100%; object-fit: contain;">
{% else %}
	<p>Not ready to stream</p>
{% endif %}
</div>
